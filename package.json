{
  "name": "micro-frontend-vanilla",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "start": "lerna run --scope @app/* --parallel start",
    "build": "lerna run --scope @app/* build",
    "serve": "lerna run --scope @app/* --parallel serve",
    "clean": "lerna run --scope @app/* --parallel clean",
    "e2e": "npx cypress run --spec './packages/*/e2e/*.cy.{js,jsx,ts,tsx}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.3",
    "commitizen": "^4.2.5",
    "cypress": "^10.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "lerna": "^5.4.3",
    "nx": "^14.5.7",
    "typescript": "^4.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
